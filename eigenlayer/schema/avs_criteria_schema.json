{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "avs_address": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
          },
          "category": {
            "anyOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": { "type": "string" }
              }
            ]
          },
          "criteria": {
            "type": "object",
            "properties": {
              "slashing": {
                "type": "object",
                "properties": {
                  "operator_sets": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "number"
                        },
                        "mechanisms": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "mechanism": {
                                "type": "string",
                                "enum": ["deterministic", "challenge_period", "committee_based"]
                              },
                              "metadata": {
                                "type": "array",
                                "items": {
                                  "type": "object",
                                  "properties": {
                                    "name": {
                                      "type": "string",
                                      "enum": ["mechanism", "enforcement", "openness", "incentive"]
                                    },
                                    "is_aligned": {
                                      "type": "boolean"
                                    },
                                    "source": {
                                      "type": "string",
                                      "format": "uri"
                                    }
                                  },
                                  "required": ["name", "is_aligned", "source"]
                                }
                              }
                            },
                            "required": ["mechanism", "metadata"]
                          }
                        }
                      },
                      "required": ["id", "mechanisms"]
                    }
                  },
                  "is_implemented": {
                    "type": "boolean"
                  },
                  "url": {
                    "anyOf": [
                      { "type": "string", "format": "uri" },
                      { "type": "string", "maxLength": 0 }
                    ]
                  }
                },
                "required": ["operator_sets", "is_implemented", "url"]
              },
              "reward": {
                "type": "object",
                "properties": {
                  "is_implemented": {
                    "type": "boolean"
                  },
                  "url": {
                    "anyOf": [
                      { "type": "string", "format": "uri" },
                      { "type": "string", "maxLength": 0 }
                    ]
                  }
                },
                "required": ["is_implemented", "url"]
              }
            },
            "required": ["slashing", "reward"]
          },
          "contact": {
            "type": "object",
            "properties": {
              "telegram": {
                "anyOf": [
                  { "type": "string", "format": "uri" },
                  { "type": "string", "maxLength": 0 }
                ]
              },
              "discord": {
                "anyOf": [
                  { "type": "string", "format": "uri" },
                  { "type": "string", "maxLength": 0 }
                ]
              }
            }
          }
        },
        "required": ["name", "avs_address", "category", "criteria", "contact"]
      }
    }
  },
  "required": ["projects"]
}