{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "categories": {
            "anyOf": [
              { "type": "string" },
              {
                "type": "array",
                "items": { "type": "string" }
              }
            ]
          },
          "contract_address": {
            "type": "string",
            "pattern": "^0x[a-fA-F0-9]{40}$"
          },
          "criteria": {
            "type": "object",
            "properties": {
              "slashing": {
                "type": "object",
                "properties": {
                  "is_implemented": {
                    "type": "boolean"
                  },
                  "url": {
                    "anyOf": [
                      { "type": "string", "format": "uri" },
                      { "type": "string", "maxLength": 0 }
                    ]
                  }
                },
                "required": ["is_implemented", "url"]
              },
              "reward": {
                "type": "object",
                "properties": {
                  "is_implemented": {
                    "type": "boolean"
                  },
                  "url": {
                    "anyOf": [
                      { "type": "string", "format": "uri" },
                      { "type": "string", "maxLength": 0 }
                    ]
                  }
                },
                "required": ["is_implemented", "url"]
              }
            },
            "required": ["slashing", "reward"]
          },
          "contact": {
            "type": "object",
            "properties": {
              "telegram": {
                "anyOf": [
                  { "type": "string", "format": "uri" },
                  { "type": "string", "maxLength": 0 }
                ]
              },
              "discord": {
                "anyOf": [
                  { "type": "string", "format": "uri" },
                  { "type": "string", "maxLength": 0 }
                ]
              }
            }
          }
        },
        "required": ["name", "categories", "contract_address", "criteria", "contact"]
      }
    }
  },
  "required": ["projects"]
}
